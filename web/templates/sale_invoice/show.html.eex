<h2>Show sale invoice</h2>

<ul>

  <li>
    <strong>Company:</strong>
    <%= if @sale_invoice.company, do: @sale_invoice.company.name %>
  </li>

  <li>
    <strong>Contact:</strong>
    <%= if @sale_invoice.contact, do: @sale_invoice.contact.name %>
  </li>

  <li>
    <strong>Payment Terms:</strong>
    <%= if @sale_invoice.term, do: @sale_invoice.term.name %>
  </li>

  <li>
    <strong>Payment Type:</strong>
    <%= if @sale_invoice.payment, do: @sale_invoice.payment.name %>
  </li>

  <li>
    <strong>Reference:</strong>
    <%= @sale_invoice.reference %>
  </li>

  <li>
    <strong>Invoice date:</strong>
    <%= @sale_invoice.invoice_date %>
  </li>

  <li>
    <strong>Paid date:</strong>
    <%= @sale_invoice.paid_date %>
  </li>

  <li>
    <strong>Po number:</strong>
    <%= @sale_invoice.po_number %>
  </li>

  <li>
    <strong>Is credit note:</strong>
    <%= @sale_invoice.is_credit_note %>
  </li>

  <li>
    <strong>Resolved vat:</strong>
    <%= @sale_invoice.resolved_vat %>
  </li>

  <li>
    <strong>Resolved corp:</strong>
    <%= @sale_invoice.resolved_corp %>
  </li>

</ul>

<%= link "Edit", to: sale_invoice_path(@conn, :edit, @sale_invoice) %>
<%= link "Back", to: sale_invoice_path(@conn, :index) %>
